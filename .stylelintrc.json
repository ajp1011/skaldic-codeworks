{
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "layer",
          "source",
          "theme"
        ]
      }
    ]
  },
  "ignoreFiles": [
    "public/build/**/*",
    "node_modules/**/*"
  ]
}
